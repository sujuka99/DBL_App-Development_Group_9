<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC1717">

    <Button
        android:id="@+id/popupwindowbuttonbookstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="373dp"
        android:text="@string/button_popup_bookstore" />

    <Button
        android:id="@+id/popupwindowbuttonquestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="372dp"
        android:layout_toEndOf="@+id/popupwindowbuttonbookstore"
        android:text="@string/button_popup_questions" />
</RelativeLayout>